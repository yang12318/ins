<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/about_follow_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/about_follow_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/about_follow_head"
                android:text="全名"
                android:singleLine="true"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/about_follow_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_follow_username"
                android:layout_toRightOf="@+id/about_follow_head"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:text="点赞"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/about_follow_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/about_follow_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/about_follow_head"
                android:layout_below="@+id/about_follow_like"
                android:singleLine="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>